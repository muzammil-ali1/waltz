    <changeSet author="davidwatkins73"
               id="20180709-3148-2">
        <comment>3148: remove rag defn fields from measurable_category</comment>
        <dropColumn tableName="measurable_category"
                    columnName="rating_name_r" />
        <dropColumn tableName="measurable_category"
